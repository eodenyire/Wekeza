@page
@model Wekeza.MVP4._0.Pages.CustomerCare.IndexModel
@{
    ViewData["Title"] = "Customer Care Dashboard";
    ViewData["UserName"] = Model.UserName;
    ViewData["UserRole"] = "Customer Care Officer";
    ViewData["UserInitials"] = Model.UserInitials;
    ViewData["NotificationCount"] = Model.NotificationCount;
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    <li class="sidebar-menu-item">
        <a href="/CustomerCare" class="sidebar-menu-link active">
            <i class="fas fa-home"></i>
            <span>Dashboard</span>
        </a>
    </li>
    <li class="sidebar-menu-item">
        <a href="/CustomerCare/Search" class="sidebar-menu-link">
            <i class="fas fa-search"></i>
            <span>Search Customer</span>
        </a>
    </li>
    <li class="sidebar-menu-item">
        <a href="/CustomerCare/Inquiries" class="sidebar-menu-link">
            <i class="fas fa-question-circle"></i>
            <span>Inquiries</span>
        </a>
    </li>
    <li class="sidebar-menu-item">
        <a href="/CustomerCare/Complaints" class="sidebar-menu-link">
            <i class="fas fa-comment-dots"></i>
            <span>Complaints</span>
        </a>
    </li>
    <li class="sidebar-menu-item">
        <a href="/CustomerCare/Accounts" class="sidebar-menu-link">
            <i class="fas fa-wallet"></i>
            <span>Account Services</span>
        </a>
    </li>
    <li class="sidebar-menu-item">
        <a href="/CustomerCare/Reports" class="sidebar-menu-link">
            <i class="fas fa-chart-bar"></i>
            <span>Reports</span>
        </a>
    </li>
    <li class="sidebar-menu-item">
        <a href="/CustomerCare/Feedback" class="sidebar-menu-link">
            <i class="fas fa-star"></i>
            <span>Feedback</span>
        </a>
    </li>
}

<div class="page-header">
    <h3>Welcome, @Model.UserName!</h3>
    <p>Customer service and support management</p>
</div>

<div class="stats-grid">
    <div class="stat-card primary">
        <div class="stat-header">
            <div class="stat-info">
                <h6>ACTIVE INQUIRIES</h6>
                <div class="stat-value">@Model.ActiveInquiries</div>
                <div class="stat-change">
                    <i class="fas fa-question-circle"></i> Pending
                </div>
            </div>
            <div class="stat-icon primary">
                <i class="fas fa-inbox"></i>
            </div>
        </div>
    </div>

    <div class="stat-card success">
        <div class="stat-header">
            <div class="stat-info">
                <h6>RESOLVED TODAY</h6>
                <div class="stat-value">@Model.ResolvedToday</div>
                <div class="stat-change positive">
                    <i class="fas fa-check"></i> Completed
                </div>
            </div>
            <div class="stat-icon success">
                <i class="fas fa-check-circle"></i>
            </div>
        </div>
    </div>

    <div class="stat-card warning">
        <div class="stat-header">
            <div class="stat-info">
                <h6>AVG RESPONSE TIME</h6>
                <div class="stat-value">@Model.AvgResponseTime</div>
                <div class="stat-change positive">
                    <i class="fas fa-clock"></i> Within SLA
                </div>
            </div>
            <div class="stat-icon warning">
                <i class="fas fa-hourglass-half"></i>
            </div>
        </div>
    </div>

    <div class="stat-card danger">
        <div class="stat-header">
            <div class="stat-info">
                <h6>SATISFACTION SCORE</h6>
                <div class="stat-value">@Model.SatisfactionScore</div>
                <div class="stat-change positive">
                    <i class="fas fa-smile"></i> Excellent
                </div>
            </div>
            <div class="stat-icon danger">
                <i class="fas fa-star"></i>
            </div>
        </div>
    </div>
</div>

<div class="quick-actions">
    <h5><i class="fas fa-bolt"></i> Quick Actions</h5>
    <div class="action-buttons">
        <a href="/CustomerCare/Search" class="action-btn">
            <i class="fas fa-search"></i>
            <span>Search Customer</span>
        </a>
        <a href="/CustomerCare/Inquiries/New" class="action-btn">
            <i class="fas fa-plus"></i>
            <span>New Inquiry</span>
        </a>
        <a href="/CustomerCare/Accounts" class="action-btn">
            <i class="fas fa-wallet"></i>
            <span>Account Services</span>
        </a>
        <a href="/CustomerCare/Reports" class="action-btn">
            <i class="fas fa-chart-bar"></i>
            <span>Customer Reports</span>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="data-table">
            <h5><i class="fas fa-inbox"></i> Recent Inquiries</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Customer</th>
                        <th>Subject</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>John Doe</td>
                        <td>Account Balance Inquiry</td>
                        <td><span class="badge bg-warning">Open</span></td>
                    </tr>
                    <tr>
                        <td>Jane Smith</td>
                        <td>Card Activation</td>
                        <td><span class="badge bg-success">Resolved</span></td>
                    </tr>
                    <tr>
                        <td>Mike Johnson</td>
                        <td>Transaction Query</td>
                        <td><span class="badge bg-info">In Progress</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-6">
        <div class="data-table">
            <h5><i class="fas fa-comment-dots"></i> Recent Complaints</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Customer</th>
                        <th>Issue</th>
                        <th>Priority</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Alice Brown</td>
                        <td>Delayed Transfer</td>
                        <td><span class="badge bg-danger">High</span></td>
                    </tr>
                    <tr>
                        <td>Bob Wilson</td>
                        <td>ATM Issue</td>
                        <td><span class="badge bg-warning">Medium</span></td>
                    </tr>
                    <tr>
                        <td>Carol Davis</td>
                        <td>Statement Request</td>
                        <td><span class="badge bg-info">Low</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
