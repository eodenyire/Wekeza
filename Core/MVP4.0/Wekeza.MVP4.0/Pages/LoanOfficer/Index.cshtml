@page
@model Wekeza.MVP4._0.Pages.LoanOfficer.IndexModel
@{
    ViewData["Title"] = "Loan Officer Dashboard";
    ViewData["UserName"] = Model.UserName;
    ViewData["UserRole"] = "Loan Officer";
    ViewData["UserInitials"] = Model.UserInitials;
    ViewData["NotificationCount"] = Model.NotificationCount;
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    <li class="sidebar-menu-item">
        <a href="/LoanOfficer" class="sidebar-menu-link active">
            <i class="fas fa-home"></i>
            <span>Dashboard</span>
        </a>
    </li>
    <li class="sidebar-menu-item">
        <a href="/LoanOfficer/Applications" class="sidebar-menu-link">
            <i class="fas fa-file-alt"></i>
            <span>Loan Applications</span>
        </a>
    </li>
    <li class="sidebar-menu-item">
        <a href="/LoanOfficer/Portfolio" class="sidebar-menu-link">
            <i class="fas fa-briefcase"></i>
            <span>My Portfolio</span>
        </a>
    </li>
    <li class="sidebar-menu-item">
        <a href="/LoanOfficer/Disbursements" class="sidebar-menu-link">
            <i class="fas fa-hand-holding-usd"></i>
            <span>Disbursements</span>
        </a>
    </li>
    <li class="sidebar-menu-item">
        <a href="/LoanOfficer/Collections" class="sidebar-menu-link">
            <i class="fas fa-money-check-alt"></i>
            <span>Collections</span>
        </a>
    </li>
}

<div class="page-header">
    <h3>Welcome, @Model.UserName!</h3>
    <p>Loan portfolio and application management</p>
</div>

<div class="stats-grid">
    <div class="stat-card primary">
        <div class="stat-header">
            <div class="stat-info">
                <h6>PENDING APPLICATIONS</h6>
                <div class="stat-value">@Model.PendingApplications</div>
                <div class="stat-change">
                    <i class="fas fa-clock"></i> Awaiting review
                </div>
            </div>
            <div class="stat-icon primary">
                <i class="fas fa-file-invoice"></i>
            </div>
        </div>
    </div>

    <div class="stat-card success">
        <div class="stat-header">
            <div class="stat-info">
                <h6>ACTIVE PORTFOLIO</h6>
                <div class="stat-value">@Model.ActivePortfolio</div>
                <div class="stat-change positive">
                    <i class="fas fa-check"></i> Performing well
                </div>
            </div>
            <div class="stat-icon success">
                <i class="fas fa-briefcase"></i>
            </div>
        </div>
    </div>

    <div class="stat-card warning">
        <div class="stat-header">
            <div class="stat-info">
                <h6>DISBURSEMENTS TODAY</h6>
                <div class="stat-value">@Model.DisbursementsToday</div>
                <div class="stat-change">
                    <i class="fas fa-hand-holding-usd"></i> Scheduled
                </div>
            </div>
            <div class="stat-icon warning">
                <i class="fas fa-money-bill-wave"></i>
            </div>
        </div>
    </div>

    <div class="stat-card danger">
        <div class="stat-header">
            <div class="stat-info">
                <h6>OVERDUE LOANS</h6>
                <div class="stat-value">@Model.OverdueLoans</div>
                <div class="stat-change negative">
                    <i class="fas fa-exclamation-triangle"></i> Needs attention
                </div>
            </div>
            <div class="stat-icon danger">
                <i class="fas fa-exclamation-circle"></i>
            </div>
        </div>
    </div>
</div>

<div class="quick-actions">
    <h5><i class="fas fa-bolt"></i> Quick Actions</h5>
    <div class="action-buttons">
        <a href="/LoanOfficer/Applications/New" class="action-btn">
            <i class="fas fa-plus"></i>
            <span>New Application</span>
        </a>
        <a href="/LoanOfficer/Applications" class="action-btn">
            <i class="fas fa-file-alt"></i>
            <span>Review Applications</span>
        </a>
        <a href="/LoanOfficer/Disbursements" class="action-btn">
            <i class="fas fa-hand-holding-usd"></i>
            <span>Process Disbursement</span>
        </a>
        <a href="/LoanOfficer/Calculator" class="action-btn">
            <i class="fas fa-calculator"></i>
            <span>Loan Calculator</span>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="data-table">
            <h5><i class="fas fa-file-alt"></i> Recent Applications</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Customer</th>
                        <th>Amount</th>
                        <th>Type</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var app in Model.RecentApplications)
                    {
                        <tr>
                            <td>@app.CustomerName</td>
                            <td>@app.Amount</td>
                            <td>@app.Type</td>
                            <td><span class="badge bg-@app.StatusClass">@app.Status</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-6">
        <div class="data-table">
            <h5><i class="fas fa-chart-pie"></i> Portfolio Summary</h5>
            <canvas id="portfolioChart" height="200"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const ctx = document.getElementById('portfolioChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Performing', 'Watch', 'Substandard', 'Doubtful'],
                datasets: [{
                    data: [75, 15, 7, 3],
                    backgroundColor: ['#27ae60', '#f39c12', '#e74c3c', '#c0392b']
                }]
            }
        });
    </script>
}
