<div class="page-header">
    <h3>Balance Inquiry</h3>
    <p>Check customer account balances</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="data-table">
            <h5><i class="fas fa-search-dollar"></i> Customer & Account Lookup</h5>
            
            <!-- Search Options -->
            <div class="mb-3">
                <div class="btn-group" role="group">
                    <input type="radio" class="btn-check" name="searchType" id="searchByAccount" value="account" checked>
                    <label class="btn btn-outline-primary" for="searchByAccount">Search by Account Number</label>
                    
                    <input type="radio" class="btn-check" name="searchType" id="searchByName" value="name">
                    <label class="btn btn-outline-primary" for="searchByName">Search by Customer Name</label>
                    
                    <input type="radio" class="btn-check" name="searchType" id="searchById" value="id">
                    <label class="btn btn-outline-primary" for="searchById">Search by ID Number</label>
                </div>
            </div>
            
            <form id="balanceForm">
                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label for="searchInput" class="form-label" id="searchLabel">Account Number</label>
                            <input type="text" class="form-control" id="searchInput" placeholder="Enter account number" required>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-grid">
                                <button type="button" class="btn btn-primary" onclick="performSearch()">
                                    <i class="fas fa-search"></i> Search
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

            <!-- Search Results -->
            <div id="searchResults" style="display: none;">
                <h6><i class="fas fa-list"></i> Search Results</h6>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Account Number</th>
                                <th>Customer Name</th>
                                <th>Account Type</th>
                                <th>Balance</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="searchResultsBody">
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="d-flex gap-2 mt-3">
                <button type="button" class="btn btn-secondary" onclick="clearSearch()">
                    <i class="fas fa-times"></i> Clear
                </button>
            </div>
        </div>

        <!-- Account Details Card -->
        <div class="data-table mt-4" id="accountDetails" style="display: none;">
            <h5><i class="fas fa-user"></i> Account Details</h5>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Account Holder</label>
                        <input type="text" class="form-control" id="accountHolder" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Account Number</label>
                        <input type="text" class="form-control" id="displayAccountNumber" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Account Type</label>
                        <input type="text" class="form-control" id="accountType" readonly>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Current Balance</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="text" class="form-control balance-display" id="currentBalance" readonly>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Available Balance</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="text" class="form-control balance-display" id="availableBalance" readonly>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Account Status</label>
                        <input type="text" class="form-control" id="accountStatus" readonly>
                    </div>
                </div>
            </div>
            
            <div class="row mt-3">
                <div class="col-md-12">
                    <h6>Recent Transactions (Last 5)</h6>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Type</th>
                                    <th>Amount</th>
                                    <th>Balance</th>
                                </tr>
                            </thead>
                            <tbody id="transactionHistory">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="data-table">
            <h5><i class="fas fa-history"></i> Recent Inquiries</h5>
            <div class="list-group">
                @foreach (var inquiry in Model.RecentInquiries)
                {
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">@inquiry.AccountNumber</h6>
                            <small>@inquiry.Time</small>
                        </div>
                        <p class="mb-1 text-success">@inquiry.Balance</p>
                        <small>@inquiry.CustomerName</small>
                    </div>
                }
            </div>
        </div>

        <div class="data-table mt-3">
            <h5><i class="fas fa-info-circle"></i> Quick Actions</h5>
            <div class="d-grid gap-2">
                <button class="btn btn-outline-primary" onclick="printBalance()">
                    <i class="fas fa-print"></i> Print Balance
                </button>
                <button class="btn btn-outline-info" onclick="emailBalance()">
                    <i class="fas fa-envelope"></i> Email Balance
                </button>
                <button class="btn btn-outline-success" onclick="exportBalance()">
                    <i class="fas fa-download"></i> Export Details
                </button>
            </div>
        </div>
    </div>
</div>

