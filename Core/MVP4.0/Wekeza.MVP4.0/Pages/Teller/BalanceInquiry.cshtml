                    { date: '2026-01-18', description: 'Salary', type: 'Credit', amount: 2800.00, balance: 4100.00 }
                ]
            }
        };

        // Load any newly created accounts from localStorage
        function loadNewAccounts() {
            const newAccountsDetailed = JSON.parse(localStorage.getItem('newAccountsDetailed') || '{}');
            Object.assign(customers, newAccountsDetailed);
        }

        // Initialize with any new accounts
        loadNewAccounts();

        function lookupAccount() {
            const accountNumber = document.getElementById('accountNumber').value;
            const customerNameField = document.getElementById('customerName');
            
            if (accountNumber && customers[accountNumber]) {
                customerNameField.value = customers[accountNumber].name;
                customerNameField.style.backgroundColor = '#d4edda';
            } else if (accountNumber) {
                customerNameField.value = 'Account not found';
                customerNameField.style.backgroundColor = '#f8d7da';
            } else {
                customerNameField.value = '';
                customerNameField.style.backgroundColor = '';
            }
        }

        function checkBalance() {
            const accountNumber = document.getElementById('accountNumber').value;
            
            if (!accountNumber) {
                showAlert('danger', 'Please enter an account number.');
                return;
            }
            
            if (!customers[accountNumber]) {
                showAlert('danger', 'Account not found. Please check the account number.');
                return;
            }
            
            const customer = customers[accountNumber];
            
            // Show loading state
            const checkBtn = document.querySelector('button[onclick="checkBalance()"]');
            const originalText = checkBtn.innerHTML;
            checkBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Checking...';
            checkBtn.disabled = true;
            
            setTimeout(() => {
                // Reset button
                checkBtn.innerHTML = originalText;
                checkBtn.disabled = false;
                
                // Populate account details
                document.getElementById('accountHolder').value = customer.name;
                document.getElementById('displayAccountNumber').value = accountNumber;
                document.getElementById('accountType').value = customer.type;
                document.getElementById('currentBalance').value = customer.balance.toFixed(2);
                document.getElementById('availableBalance').value = customer.available.toFixed(2);
                document.getElementById('accountStatus').value = customer.status;
                
                // Populate transaction history
                const transactionHistory = document.getElementById('transactionHistory');
                transactionHistory.innerHTML = '';
                
                customer.transactions.forEach(transaction => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${transaction.date}</td>
                        <td>${transaction.description}</td>
                        <td><span class="badge bg-${transaction.type === 'Credit' ? 'success' : 'danger'}">${transaction.type}</span></td>
                        <td class="${transaction.amount >= 0 ? 'text-success' : 'text-danger'}">
                            ${transaction.amount >= 0 ? '+' : ''}$${Math.abs(transaction.amount).toFixed(2)}
                        </td>
                        <td>$${transaction.balance.toFixed(2)}</td>
                    `;
                    transactionHistory.appendChild(row);
                });
                
                // Show account details
                document.getElementById('accountDetails').style.display = 'block';
                
                // Add to recent inquiries
                addToRecentInquiries(accountNumber, customer.name, `$${customer.balance.toFixed(2)}`);
                
                showAlert('success', `Balance retrieved successfully for ${customer.name}!`);
            }, 1500);
        }

        function clearForm() {
            document.getElementById('balanceForm').reset();
            document.getElementById('customerName').style.backgroundColor = '';
            document.getElementById('accountDetails').style.display = 'none';
        }

        function printBalance() {
            const accountNumber = document.getElementById('displayAccountNumber').value;
            if (!accountNumber) {
                showAlert('warning', 'Please check an account balance first.');
                return;
            }
            
            showAlert('info', 'Balance statement sent to printer...');
            // In a real application, this would trigger a print job
        }

        function emailBalance() {
            const accountNumber = document.getElementById('displayAccountNumber').value;
            if (!accountNumber) {
                showAlert('warning', 'Please check an account balance first.');
                return;
            }
            
            showAlert('info', 'Balance statement emailed to customer...');
            // In a real application, this would send an email
        }

        function exportBalance() {
            const accountNumber = document.getElementById('displayAccountNumber').value;
            if (!accountNumber) {
                showAlert('warning', 'Please check an account balance first.');
                return;
            }
            
            showAlert('info', 'Account details exported successfully...');
            // In a real application, this would generate a downloadable file
        }

        function showAlert(type, message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'info' ? 'info-circle' : 'exclamation-circle'}"></i> ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            const container = document.querySelector('.page-header');
            container.parentNode.insertBefore(alertDiv, container.nextSibling);
            
            // Auto-dismiss after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 5000);
        }

        function addToRecentInquiries(accountNumber, customerName, balance) {
            const recentList = document.querySelector('.list-group');
            const newItem = document.createElement('div');
            newItem.className = 'list-group-item';
            newItem.innerHTML = `
                <div class="d-flex w-100 justify-content-between">
                    <h6 class="mb-1">${accountNumber}</h6>
                    <small>Just now</small>
                </div>
                <p class="mb-1 text-success">${balance}</p>
                <small>${customerName}</small>
            `;
            
            // Add to top of list
            recentList.insertBefore(newItem, recentList.firstChild);
            
            // Remove last item if more than 4 items
            if (recentList.children.length > 4) {
                recentList.removeChild(recentList.lastChild);
            }
        }
    </script>
    
