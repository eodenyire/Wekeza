<!-- Performance Review Modal -->
<div class="modal fade" id="performanceModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Performance Review</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="UpdatePerformance">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Staff Member</label>
                                <select class="form-control" name="StaffId" id="performanceStaff">
                                    <option value="">Select Staff</option>
                                    @foreach (var staff in Model.StaffMembers)
                                    {
                                        <option value="@staff.Id">@staff.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
