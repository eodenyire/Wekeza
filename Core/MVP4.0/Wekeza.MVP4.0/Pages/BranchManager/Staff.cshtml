@section Scripts {
    <script>
        // Global variables to store current staff data
        let currentStaffData = {};
        
        function viewStaff(staffId, name, position, department, performance) {
            // Store staff data
            currentStaffData = {
                id: staffId,
                name: name,
                position: position,
                department: department,
                performance: performance
            };
            
            // Populate view modal
            document.getElementById('viewStaffName').textContent = name;
            document.getElementById('viewStaffPosition').textContent = position;
            document.getElementById('viewStaffDepartment').textContent = department;
            document.getElementById('viewStaffPerformance').textContent = performance + '%';
            
            // Update progress bar
            const progressBar = document.getElementById('viewStaffPerformanceBar');
            progressBar.style.width = performance + '%';
            
            // Set progress bar color based on performance
            progressBar.className = 'progress-bar';
            if (performance >= 90) {
                progressBar.classList.add('bg-success');
            } else if (performance >= 75) {
                progressBar.classList.add('bg-warning');
            } else {
                progressBar.classList.add('bg-danger');
            }
            
            // Set status
            document.getElementById('viewStaffStatus').textContent = 'Active';
        }
        
        function editStaff(staffId, name, position, department) {
            // Store staff data
            currentStaffData = {
                id: staffId,
                name: name,
                position: position,
                department: department
            };
            
            // Populate edit modal
            document.getElementById('editStaffId').value = staffId;
            document.getElementById('editStaffName').value = name;
            document.getElementById('editStaffPosition').value = position;
            document.getElementById('editStaffDepartment').value = department;
        }
        
        function switchToEdit() {
            // Close view modal and open edit modal
            const viewModal = bootstrap.Modal.getInstance(document.getElementById('viewStaffModal'));
            viewModal.hide();
            
            // Populate edit modal with current data
            editStaff(currentStaffData.id, currentStaffData.name, currentStaffData.position, currentStaffData.department);
            
            // Show edit modal
            const editModal = new bootstrap.Modal(document.getElementById('editStaffModal'));
            editModal.show();
        }
        
        // Show success/error messages
        function showAlert(type, message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i> ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            const container = document.querySelector('.page-header');
            container.parentNode.insertBefore(alertDiv, container.nextSibling);
            
            // Auto-dismiss after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 5000);
        }
    </script>
}