<div class="page-header">
    <h3>Role Management</h3>
    <p>Manage user roles and permissions</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <div class="data-table">
            <h5><i class="fas fa-user-shield"></i> Available Roles</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Role</th>
                        <th>Description</th>
                        <th>Users</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model.RoleStatistics)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-primary">@role.Key</span>
                            </td>
                            <td>@GetRoleDescription(role.Key)</td>
                            <td>@role.Value users</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-6">
        <div class="data-table">
            <h5><i class="fas fa-user-edit"></i> Assign Role to User</h5>
            <form method="post" asp-page-handler="AssignRole">
                <div class="mb-3">
                    <label class="form-label">Select User</label>
                    <select class="form-control" name="UserId" required>
                        <option value="">Choose a user...</option>
                        @foreach (var user in Model.AllUsers)
                        {
                            <option value="@user.Id">@user.FullName (@user.Username) - Current: @user.Role</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">New Role</label>
                    <select class="form-control" name="NewRole" required>
                        <option value="">Select new role...</option>
                        @foreach (var role in Model.AvailableRoles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Reason for Change</label>
                    <textarea class="form-control" name="Reason" rows="3" placeholder="Enter reason for role change..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Assign Role
                </button>
            </form>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="data-table">
            <h5><i class="fas fa-users"></i> User Role Assignments</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Email</th>
                        <th>Current Role</th>
                        <th>Status</th>
                        <th>Last Login</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.AllUsers)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-sm me-2">@GetUserInitials(user.FullName)</div>
                                    <strong>@user.FullName</strong>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td><span class="badge bg-@GetRoleClass(user.Role.ToString())">@user.Role</span></td>
                            <td><span class="badge bg-@(user.IsActive ? "success" : "danger")">@(user.IsActive ? "Active" : "Inactive")</span></td>
                            <td>@(user.LastLoginAt?.ToString("MMM dd, yyyy") ?? "Never")</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#changeRoleModal" onclick="setUserForRoleChange('@user.Id', '@user.FullName', '@user.Role')">
                                    <i class="fas fa-edit"></i> Change Role
                                </button>
                                @if (user.IsActive)
                                {
                                    <button class="btn btn-sm btn-outline-warning" onclick="lockUser('@user.Id', '@user.FullName')">
                                        <i class="fas fa-lock"></i> Lock
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-outline-success" onclick="unlockUser('@user.Id', '@user.FullName')">
                                        <i class="fas fa-unlock"></i> Unlock
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Change Role Modal -->
<div class="modal fade" id="changeRoleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Change User Role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="AssignRole">
                <div class="modal-body">
                    <input type="hidden" id="modalUserId" name="UserId">
                    
                    <div class="mb-3">
                        <label class="form-label">User</label>
                        <input type="text" class="form-control" id="modalUserName" readonly>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Current Role</label>
                        <input type="text" class="form-control" id="modalCurrentRole" readonly>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">New Role</label>
                        <select class="form-control" name="NewRole" required>
                            <option value="">Select new role...</option>
                            @foreach (var role in Model.AvailableRoles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Reason for Change</label>
                        <textarea class="form-control" name="Reason" rows="3" placeholder="Enter reason for role change..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Change Role</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setUserForRoleChange(userId, userName, currentRole) {
            document.getElementById('modalUserId').value = userId;
            document.getElementById('modalUserName').value = userName;
            document.getElementById('modalCurrentRole').value = currentRole;
        }
        
        async function lockUser(userId, userName) {
            if (confirm(`Are you sure you want to lock user: ${userName}?`)) {
                try {
                    const response = await fetch(`/api/Admin/lock-user/${userId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    
                    if (response.ok) {
                        showAlert('success', `User ${userName} has been locked successfully.`);
                        location.reload();
                    } else {
                        showAlert('danger', 'Failed to lock user.');
                    }
                } catch (error) {
                    showAlert('danger', 'Error occurred while locking user.');
                }
            }
        }
        
        async function unlockUser(userId, userName) {
            if (confirm(`Are you sure you want to unlock user: ${userName}?`)) {
                try {
                    const response = await fetch(`/api/Admin/unlock-user/${userId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    
                    if (response.ok) {
                        showAlert('success', `User ${userName} has been unlocked successfully.`);
                        location.reload();
                    } else {
                        showAlert('danger', 'Failed to unlock user.');
                    }
                } catch (error) {
                    showAlert('danger', 'Error occurred while unlocking user.');
                }
            }
        }
        
        function showAlert(type, message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i> ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            const container = document.querySelector('.page-header');
            container.parentNode.insertBefore(alertDiv, container.nextSibling);
            
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 5000);
        }
    </script>
}

@functions {
    private string GetRoleDescription(string role)
    {
        return role switch
        {
            "Administrator" => "Full system access and user management",
            "BranchManager" => "Branch operations and staff oversight",
            "Teller" => "Customer transactions and account services",
            "Supervisor" => "Teller supervision and transaction approval",
            "LoanOfficer" => "Loan processing and credit management",
            "CashOfficer" => "Cash handling and vault management",
            "ComplianceOfficer" => "Regulatory compliance and AML monitoring",
            "RiskOfficer" => "Risk assessment and fraud detection",
            "Auditor" => "Internal audit and compliance review",
            "CustomerCareOfficer" => "Customer service and support",
            "BackOfficeStaff" => "Back office operations and processing",
            "BancassuranceAgent" => "Insurance product sales and service",
            "ITAdministrator" => "System administration and technical support",
            _ => "Standard user access"
        };
    }
    
    private string GetRoleClass(string role)
    {
        return role switch
        {
            "Administrator" => "danger",
            "BranchManager" => "primary",
            "Supervisor" => "info",
            "ComplianceOfficer" or "RiskOfficer" or "Auditor" => "warning",
            "ITAdministrator" => "dark",
            _ => "secondary"
        };
    }
    
    private string GetUserInitials(string fullName)
    {
        var parts = fullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return parts.Length > 0 ? parts[0].Substring(0, Math.Min(2, parts[0].Length)).ToUpper() : "??";
    }
}