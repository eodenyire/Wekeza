<div class="row mt-4">
    <div class="col-md-12">
        <div class="data-table">
            <h5><i class="fas fa-history"></i> Recent Reports</h5>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Report Name</th>
                            <th>Generated By</th>
                            <th>Generated At</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in Model.RecentReports)
                        {
                            <tr>
                                <td>@report.Name</td>
                                <td>@report.GeneratedBy</td>
                                <td>@report.GeneratedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>
                                    <span class="badge bg-@report.StatusClass">@report.Status</span>
                                </td>
                                <td>
                                    @if (report.Status == "Completed")
                                    {
                                        <button class="btn btn-sm btn-outline-primary" onclick="downloadReport('@report.Id')">
                                            <i class="fas fa-download"></i> Download
                                        </button>
                                    }
                                    else if (report.Status == "Failed")
                                    {
                                        <button class="btn btn-sm btn-outline-warning" onclick="retryReport('@report.Id')">
                                            <i class="fas fa-redo"></i> Retry
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Processing...</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function generateReport(reportType) {
            const button = event.target;
            const originalText = button.innerHTML;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generating...';
            button.disabled = true;
            
            fetch('/api/admin/generate-report', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    reportType: reportType
                })
            })
            .then(response => {
                if (response.ok) {
                    return response.blob();
                } else {
                    throw new Error('Report generation failed');
                }
            })
            .then(blob => {
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `${reportType}_${new Date().toISOString().slice(0,10)}.csv`;
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
                document.body.removeChild(a);
                
                showAlert('success', `${reportType.replace('-', ' ')} report generated and downloaded successfully!`);
                addToRecentReports(reportType);
            })
            .catch(error => {
                showAlert('danger', 'Failed to generate report.');
            })
            .finally(() => {
                button.innerHTML = originalText;
                button.disabled = false;
            });
        }
        
        function downloadReport(reportId) {
            showAlert('info', 'Report download started...');
            // In a real system, this would trigger a file download
        }
        
        function retryReport(reportId) {
            showAlert('info', 'Report generation retried...');
            // In a real system, this would retry the failed report
        }
        
        function addToRecentReports(reportType) {
            const tbody = document.querySelector('table tbody');
            const newRow = document.createElement('tr');
            newRow.innerHTML = `
                <td>${reportType.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase())} Report</td>
                <td>admin</td>
                <td>${new Date().toLocaleDateString('en-US', { month: 'short', day: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit' })}</td>
                <td><span class="badge bg-success">Completed</span></td>
                <td>
                    <button class="btn btn-sm btn-outline-primary" onclick="downloadReport('new')">
                        <i class="fas fa-download"></i> Download
                    </button>
                </td>
            `;
            tbody.insertBefore(newRow, tbody.firstChild);
        }
        
        function showAlert(type, message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'info' ? 'info-circle' : 'exclamation-circle'}"></i> ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            const container = document.querySelector('.page-header');
            container.parentNode.insertBefore(alertDiv, container.nextSibling);
            
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 5000);
        }
    </script>
}

